<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <status>warn</status>
    <appenders>
        <Console>
            <name>STDOUT</name>
            <PatternLayout>
                <pattern>%highlight{%d{HH:mm:ss.SSS} %-5level %logger{1} - %msg%n}{ERROR=Bright red, WARN=Bright yellow bold, INFO=black, DEBUG=Bright green bold}</pattern>
            </PatternLayout>
        </Console>
    </appenders>
    <Loggers>
        <Root>
            <level>debug</level>
            <AppenderRef>
                <ref>STDOUT</ref>
            </AppenderRef>
        </Root>
    </Loggers>
</Configuration>
